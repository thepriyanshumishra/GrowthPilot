generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       Profile?
  roadmap       Roadmap?
  tasks         Task[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  chatMessages  ChatMessage[]
  memories      Memory[]
  squadId       String?
  squad         Squad?    @relation(fields: [squadId], references: [id])
  
  isOnboarded   Boolean   @default(false)
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  role      String   // 'user' or 'assistant'
  content   String   @db.Text
  
  createdAt DateTime @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// GrowthPilot Specific Models

model Profile {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  currentRole       String?
  targetRole        String?
  experienceLevel   String?
  skills            String[] // Array of strings for simplicity
  availabilityHours Int      @default(1)
  
  resumeText        String?  @db.Text // Extracted text from resume
  bio               String?  @db.Text
  
  // Preferences
  dailyBriefing     Boolean  @default(true)
  milestoneAlerts   Boolean  @default(true)
  emailUpdates      Boolean  @default(false)

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  xp                Int      @default(0)
  streak            Int      @default(0)
  focusTimeTotal    Int      @default(0) // minutes spent in focus mode
  lastTaskDate      DateTime?
}

model Roadmap {
  id          String      @id @default(cuid())
  userId      String      @unique
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  milestones  Milestone[]
  
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Milestone {
  id          String   @id @default(cuid())
  roadmapId   String
  roadmap     Roadmap  @relation(fields: [roadmapId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  order       Int
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  description String?
  difficulty  String?  // Easy, Medium, Hard
  estimatedMinutes Int?
  
  metadata    Json?    // Stores detailed instructions, resources, outcomes
  
  status      String   @default("TODO") // TODO, DONE
  dateAssigned DateTime @default(now()) // For daily tracking
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Memory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  content   String   @db.Text
  type      String   // 'BLOCKER', 'INSIGHT', 'ACHIEVEMENT', 'PREFERENCE'
  category  String?  // e.g., 'React', 'Python', 'Interview'
  
  relevance Int      @default(5) // 1-10 priority for AI context
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Squad {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  image       String?
  members     User[]
  totalXp     Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
